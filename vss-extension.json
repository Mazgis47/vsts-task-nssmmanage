{
    "manifestVersion": 1,
    "id": "nssm-manage",
    "name": "Manage NSSM Service",
    "version": "1.2.0",
    "publisher": "stone-co",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Install and edit windows services through nssm.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "files": [
        {
            "path": "buildtask"
        }
    ],
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildtask"
            }
        }
    ]
}