                    "DatabaseName": {
                        "value": null
                    },
                    "ServerName": {
                        "value": null
                    },
                    "ConnectionStringName": {
                        "value": null
                    },
                    "ReleasePlatform": {
                        "value": "Any CPU"
                    },
                    "ReleaseConfiguration": {
                        "value": "Release"
                    }
                },
                "deployPhases": [
                    {
                        "deploymentInput": {
